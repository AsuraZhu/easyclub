@import 'nib'
// 注册页面
.register
  .control-label
    display inline-block
    width 200px
    text-align right
  .form-control
    width 300px
  .btn-group
    padding-left 200px
  .error 
    display none
    color #f00
    padding-left 200px
    padding-bottom 1em

// topic
// 发表话题页面
.topic 
  #tag
    margin-right 1em
  #title
    width 300px
    
// 内容页
.content
  &-hd
    background-color #f5f5f5
    border-radius top 5px
    padding 1em .5em
    h2
      margin 0
      font-size 1.3em
    .info
      font-size .9em
      margin-top .5em
      color #555
      
// 回复
.reply
  .CodeMirror
    height 160px
  &-list
    list-style none
    padding-left 0
    margin 0
    li
      border-bottom 1px solid #eee
      margin-bottom .5em
      &:last-child
        border-bottom none
      h5
        margin 0
      .date
        color #999
        font-weight normal
      p
        margin .5em