- if(user) current_user = user;
- if(current_user)
  .panel
    .panel-hd <span class="icon-profile"></span> 个人信息
    .panel-bd.user-info
      .photo: a(href='/user/#{current_user.username}')
        img(src=current_user.avatar || '/images/photo.png', alt=current_user.username, width="90" height="90")
      .info.clearfix
        h3 
          a(href="/user/#{current_user.username}")= current_user.username
          - if(current_user.isAdmin)
            small.text-muted  (管理员)
        p 话题：
          a(href="/user/#{current_user.username}/topic")= current_user.topic_count
        p 回复：
          a(href="/user/#{current_user.username}/reply")= current_user.reply_count
      p= current_user.signature
        