mixin user_info(user, title)
  .panel
    .panel-hd <span class="icon-profile"></span> #{title}
    .panel-bd.user-info
      .photo: a(href='/user/#{user.username}')
        img(src=user.avatar || '/images/photo.png', alt=user.username, width="90" height="90")
      .info.clearfix
        h3 
          a(href="/user/#{user.username}")= user.username
          - if(user.isAdmin)
            small.text-muted  (管理员)
        p 话题：
          a(href="/user/#{user.username}/topic")= user.topic_count
        p 回复：
          a(href="/user/#{user.username}/reply")= user.reply_count
      p= user.signature
        